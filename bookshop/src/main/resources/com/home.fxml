<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.HomeController" styleClass="root">

    <!-- Top Navigation Section -->
    <top>
        <VBox spacing="15" styleClass="top-section">
            <!-- Main Navigation Bar -->
            <HBox alignment="CENTER_RIGHT" spacing="15" styleClass="nav-bar">
                <padding>
                    <Insets left="20" right="20"/>
                </padding>
                
                <!-- Logo Section -->
                <HBox alignment="CENTER_LEFT" HBox.hgrow="ALWAYS">
                    <ImageView fitHeight="40.0" fitWidth="40.0">
                        <Image url="@images/icons/logo.png"/>
                    </ImageView>
                    <Label text="GyanTori" styleClass="nav-logo"/>
                </HBox>
                
                <!-- Search Bar -->
                <HBox alignment="CENTER" spacing="10" HBox.hgrow="ALWAYS" maxWidth="500">
                    <TextField fx:id="searchField" 
                              promptText="Search for your favorite books..." 
                              styleClass="search-field"
                              HBox.hgrow="ALWAYS"/>
                    <Button onAction="#performSearch" styleClass="search-button">
                        <graphic>
                            <ImageView fitHeight="20.0" fitWidth="20.0">
                                <Image url="@images/icons/search.png"/>
                            </ImageView>
                        </graphic>
                    </Button>
                </HBox>
                
                <!-- Navigation Buttons -->
                <Button styleClass="nav-button" text="Cart">
                    <graphic>
                        <ImageView fitHeight="24.0" fitWidth="24.0">
                            <Image url="@images/icons/cart.png"/>
                        </ImageView>
                    </graphic>
                </Button>
                
                <Button fx:id="profileLoginButton" 
                        onAction="#handleProfileLogin" 
                        styleClass="nav-button" 
                        text="Login">
                    <graphic>
                        <ImageView fitHeight="24.0" fitWidth="24.0">
                            <Image url="@images/icons/user.png"/>
                        </ImageView>
                    </graphic>
                </Button>
            </HBox>
        </VBox>
    </top>

    <!-- Left Sidebar -->
    <left>
        <VBox spacing="20" styleClass="sidebar">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <!-- Categories Section -->
            <VBox spacing="10" styleClass="sidebar-section">
                <Label text="Categories" styleClass="sidebar-header"/>
                <Button text="ðŸ“š All Books" styleClass="sidebar-button"/>
                <Button text="ðŸ’¼ Business" styleClass="sidebar-button"/>
                <Button text="ðŸ’» Technology" styleClass="sidebar-button"/>
                <Button text="ðŸŽ¨ Arts" styleClass="sidebar-button"/>
                <Button text="ðŸ“– Literature" styleClass="sidebar-button"/>
            </VBox>

            <Separator/>

            <!-- Library Section -->
            <VBox spacing="10" styleClass="sidebar-section">
                <Label text="My Library" styleClass="sidebar-header"/>
                <Button text="ðŸ“š My Books" styleClass="sidebar-button"/>
                <Button text="â¤ï¸ Wishlist" styleClass="sidebar-button"/>
                <Button text="ðŸ“‹ Reading List" styleClass="sidebar-button"/>
            </VBox>

            <!-- Stats Section -->
            <VBox spacing="10" styleClass="stats-section">
                <Label text="Reading Stats" styleClass="sidebar-header"/>
                <Label fx:id="statsLabel" styleClass="stats-text"/>
            </VBox>
        </VBox>
    </left>

    <!-- Main Content Area -->
    <center>
        <ScrollPane fitToWidth="true" styleClass="main-content-scroll">
            <VBox spacing="30" styleClass="main-content">
                <padding>
                    <Insets top="20" right="20" bottom="20" left="20"/>
                </padding>

                <!-- Welcome Section -->
                <VBox styleClass="welcome-section">
                    <Label fx:id="pageTitle" styleClass="welcome-title"/>
                    <Text styleClass="welcome-text" 
                          text="Discover millions of eBooks, audiobooks, magazines &amp; more"/>
                </VBox>

                <!-- Featured Books Section -->
                <VBox spacing="15">
                    <Label text="Featured Books" styleClass="section-title"/>
                    <ScrollPane styleClass="books-scroll-pane" hbarPolicy="NEVER">
                        <HBox fx:id="featuredBooks" spacing="20" styleClass="books-container"/>
                    </ScrollPane>
                </VBox>

                <!-- Recommended Books Section -->
                <VBox spacing="15">
                    <Label text="Recommended For You" styleClass="section-title"/>
                    <ScrollPane styleClass="books-scroll-pane" hbarPolicy="NEVER">
                        <HBox fx:id="recommendedBooks" spacing="20" styleClass="books-container"/>
                    </ScrollPane>
                </VBox>
            </VBox>
        </ScrollPane>
    </center>

    <!-- Footer -->
    <bottom>
        <HBox styleClass="footer" alignment="CENTER" spacing="50">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            
            <VBox alignment="CENTER" spacing="5">
                <Label text="About GyanTori" styleClass="footer-header"/>
                <Label text="Your Gateway to Knowledge" styleClass="footer-text"/>
            </VBox>
            
            <VBox alignment="CENTER" spacing="5">
                <Label text="Contact" styleClass="footer-header"/>
                <Label text="support@gyantori.com" styleClass="footer-text"/>
            </VBox>
            
            <VBox alignment="CENTER" spacing="5">
                <Label text="Follow Us" styleClass="footer-header"/>
                <HBox spacing="10" alignment="CENTER">
                    <Button styleClass="social-button">
                        <graphic>
                            <ImageView fitHeight="20" fitWidth="20">
                                <Image url="@images/icons/facebook.png"/>
                            </ImageView>
                        </graphic>
                    </Button>
                    <Button styleClass="social-button">
                        <graphic>
                            <ImageView fitHeight="20" fitWidth="20">
                                <Image url="@images/icons/twitter.png"/>
                            </ImageView>
                        </graphic>
                    </Button>
                    <Button styleClass="social-button">
                        <graphic>
                            <ImageView fitHeight="20" fitWidth="20">
                                <Image url="@images/icons/instagram.png"/>
                            </ImageView>
                        </graphic>
                    </Button>
                </HBox>
            </VBox>
        </HBox>
    </bottom>
</BorderPane>