<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.controllers.ExploreController" styleClass="root" fx:id="rootPane">

    <!-- Top Navigation Section - Fixed -->
    <VBox spacing="15" styleClass="top-section">
            <!-- Main Navigation Bar -->
            <HBox alignment="CENTER_RIGHT" spacing="15" styleClass="nav-bar">
                <padding>
                    <Insets left="20" right="20"/>
                </padding>
                
                <!-- Logo Section with Animation -->
                <HBox alignment="CENTER_LEFT" HBox.hgrow="ALWAYS" styleClass="logo-container">
                    <StackPane styleClass="logo-circle">
                        <ImageView fitHeight="65.0" fitWidth="65.0" styleClass="logo-image">
                            <Image url="@images/icons/logo.png"/>
                        </ImageView>
                    </StackPane>
                    <Label fx:id="navLogo" text="GyanTori" styleClass="nav-logo"
                           style="-fx-font-size: 30px; -fx-font-weight: bold; -fx-text-fill: #333;"/>
                </HBox>
                <!-- Enhanced Search Bar -->
                <HBox alignment="CENTER" spacing="10" HBox.hgrow="ALWAYS" maxWidth="4000" styleClass="search-container">
                    <TextField fx:id="searchField" promptText="Search for your favorite books..." styleClass="search-field" HBox.hgrow="ALWAYS"/>
                    <Button onAction="#applyFilters" styleClass="search-button, animated-button">
                        <graphic>
                            <ImageView fitHeight="20.0" fitWidth="20.0" styleClass="icon">
                                <Image url="@images/icons/search.png"/>
                            </ImageView>
                        </graphic>
                    </Button>
                </HBox>
                
                <!-- Animated Navigation Buttons -->
                <HBox spacing="10" alignment="CENTER">
                    <Button onAction="#handleCartLoad" styleClass="nav-button, animated-button" text="Cart">
                        <graphic>
                            <StackPane styleClass="icon-container">
                                <ImageView fitHeight="24.0" fitWidth="24.0" styleClass="icon">
                                    <Image url="@images/icons/cart.png"/>
                                </ImageView>
                            </StackPane>
                        </graphic>
                    </Button>
                    
                    <Button fx:id="profileLoginButton" onAction="#handleProfileLogin" styleClass="nav-button, animated-button" text="Login">
                        <graphic>
                            <StackPane styleClass="icon-container">
                                <ImageView fitHeight="24.0" fitWidth="24.0" styleClass="icon">
                                    <Image url="@images/icons/user.png"/>
                                </ImageView>
                            </StackPane>
                        </graphic>
                    </Button>
                </HBox>
            </HBox>
        </VBox>

    <!-- Main Content Section with Sidebar -->
    <HBox VBox.vgrow="ALWAYS" spacing="20">
        <!-- Enhanced Left Sidebar - Fixed width and scrollable -->
        <ScrollPane fitToWidth="true" styleClass="sidebar-scroll" hbarPolicy="NEVER" minWidth="250" prefWidth="250" maxWidth="250" HBox.hgrow="NEVER">
            <VBox spacing="20" styleClass="sidebar">
                <padding>
                    <Insets top="20" right="20" bottom="20" left="20"/>
                </padding>

                <!-- Updated sidebar buttons with event handlers -->
<VBox spacing="10" styleClass="sidebar-section">
    <Label text="My Library" styleClass="sidebar-header"/>
    <Button text="ðŸ  Home" onAction="#navigateToHome" styleClass="sidebar-button, animated-button"/>
    <Button text="ðŸ” Explore" onAction="#navigateToExplore" styleClass="sidebar-button, animated-button"/>
    <Button text="ðŸ“– Share a Book" onAction="#navigateToShare" styleClass="sidebar-button, animated-button"/>
    <Button text="ðŸ† Top Publishers" onAction="#navigateToTopPublishers" styleClass="sidebar-button, animated-button"/>
    <Button text="ðŸŒŸ Highly Rated Books" onAction="#navigateToHighlyRatedBooks" styleClass="sidebar-button, animated-button"/>
</VBox>

<Separator styleClass="custom-separator"/>

<!-- Categories Section with Icons -->
<VBox spacing="10" styleClass="sidebar-section">
    <Label text="Categories" styleClass="sidebar-header"/>
    <Button text="ðŸ“š All Books" fx:id="allBooksButton" onAction="#navigateToAllBooks" styleClass="sidebar-button, animated-button"/>
<Button text="ðŸ’¼ Business" fx:id="businessButton" onAction="#navigateToBusinessBooks" styleClass="sidebar-button, animated-button"/>
<Button text="ðŸ’» Technology" fx:id="technologyButton" onAction="#navigateToTechnologyBooks" styleClass="sidebar-button, animated-button"/>
<Button text="ðŸŽ¨ Arts" fx:id="artsButton" onAction="#navigateToArtsBooks" styleClass="sidebar-button, animated-button"/>
<Button text="ðŸ“– Literature" fx:id="literatureButton" onAction="#navigateToLiteratureBooks" styleClass="sidebar-button, animated-button"/>
</VBox>
            </VBox>
        </ScrollPane>

        <!-- Main Content Area with Smooth Scrolling -->
        <ScrollPane fitToWidth="true" styleClass="main-content-scroll" HBox.hgrow="ALWAYS">
            <VBox spacing="30" styleClass="main-content">
                
                <!-- Advanced Search and Sorting Panel -->
                <VBox styleClass="advanced-search-panel">
                    <padding>
                        <Insets top="20" right="20" bottom="20" left="20"/>
                    </padding>
                    
                    <HBox spacing="15" alignment="CENTER">
                        <Label text="Advanced Search" styleClass="section-title"/>
                        <Region HBox.hgrow="ALWAYS"/>
                        <Button fx:id="toggleAdvancedSearchBtn" text="Show Filters" onAction="#toggleAdvancedSearch" styleClass="toggle-button, animated-button"/>
                    </HBox>
                    
                    <!-- Advanced Search Filters -->
                    <VBox fx:id="advancedSearchFilters" visible="false" managed="false" spacing="15" styleClass="advanced-filters">
                        <padding>
                            <Insets top="15" right="0" bottom="0" left="0"/>
                        </padding>
                        
                        <!-- Filter Row 1 -->
                        <HBox spacing="20">
                            <!-- Author Filter -->
                            <VBox spacing="5" HBox.hgrow="ALWAYS">
                                <Label text="Author" styleClass="filter-label"/>
                                <TextField fx:id="authorFilterField" promptText="Search by author" styleClass="filter-field"/>
                            </VBox>
                            
                            <!-- Language Filter -->
                            <VBox spacing="5" HBox.hgrow="ALWAYS">
                                <Label text="Language" styleClass="filter-label"/>
                                <ComboBox fx:id="languageFilterCombo" promptText="Select language" styleClass="filter-combo" HBox.hgrow="ALWAYS"/>
                            </VBox>
                            
                            <!-- Publisher Filter -->
                            <VBox spacing="5" HBox.hgrow="ALWAYS">
                                <Label text="Publisher" styleClass="filter-label"/>
                                <TextField fx:id="publisherFilterField" promptText="Search by publisher" styleClass="filter-field"/>
                            </VBox>
                        </HBox>
                        
                        <!-- Filter Row 2 -->
                        <HBox spacing="20">
                            <!-- Category Filter -->
                            <VBox spacing="5" HBox.hgrow="ALWAYS">
                                <Label text="Category" styleClass="filter-label"/>
                                <ComboBox fx:id="categoryFilterCombo" promptText="Select category" styleClass="filter-combo" HBox.hgrow="ALWAYS"/>
                            </VBox>
                            
                            <!-- Price Range -->
                            <VBox spacing="5" HBox.hgrow="ALWAYS">
                                <Label text="Price Range" styleClass="filter-label"/>
                                <HBox spacing="10">
                                    <TextField fx:id="minPriceField" promptText="Min" styleClass="price-field" HBox.hgrow="ALWAYS"/>
                                    <Label text="to" styleClass="to-label"/>
                                    <TextField fx:id="maxPriceField" promptText="Max" styleClass="price-field" HBox.hgrow="ALWAYS"/>
                                </HBox>
                            </VBox>
                            
                            <!-- Rating Filter -->
                            <VBox spacing="5" HBox.hgrow="ALWAYS">
                                <Label text="Min Rating" styleClass="filter-label"/>
                                <HBox spacing="10" alignment="CENTER_LEFT">
                                    <Slider fx:id="ratingSlider" min="0" max="5" value="0" majorTickUnit="1" minorTickCount="0" 
                                            showTickMarks="true" showTickLabels="true" snapToTicks="true" HBox.hgrow="ALWAYS"/>
                                    <Label fx:id="ratingValueLabel" text="0.0+" styleClass="rating-label"/>
                                </HBox>
                            </VBox>
                        </HBox>
                        
                        <!-- Filter Row 3 -->
                        <HBox spacing="20">
                            <!-- Publication Date Range -->
                            <VBox spacing="5" HBox.hgrow="ALWAYS">
                                <Label text="Publication Date" styleClass="filter-label"/>
                                <HBox spacing="10">
                                    <DatePicker fx:id="fromDatePicker" promptText="From" styleClass="date-picker" HBox.hgrow="ALWAYS"/>
                                    <Label text="to" styleClass="to-label"/>
                                    <DatePicker fx:id="toDatePicker" promptText="To" styleClass="date-picker" HBox.hgrow="ALWAYS"/>
                                </HBox>
                            </VBox>
                            
                            <!-- Availability Filter -->
                            <VBox spacing="5" HBox.hgrow="ALWAYS">
                                <Label text="Availability" styleClass="filter-label"/>
                                <ComboBox fx:id="availabilityFilterCombo" promptText="Any availability" styleClass="filter-combo" HBox.hgrow="ALWAYS"/>
                            </VBox>
                            
                            <!-- Discount Filter -->
                            <VBox spacing="5" HBox.hgrow="ALWAYS">
                                <Label text="Discount" styleClass="filter-label"/>
                                <CheckBox fx:id="discountFilterCheck" text="Show only discounted books" styleClass="filter-checkbox"/>
                            </VBox>
                        </HBox>
                        
                        <!-- Filter Buttons -->
                        <HBox spacing="15" alignment="CENTER_RIGHT">
                            <Button fx:id="clearFiltersBtn" text="Clear Filters" onAction="#clearFilters" styleClass="clear-button, animated-button"/>
                            <Button fx:id="applyFiltersBtn" text="Apply Filters" onAction="#applyFilters" styleClass="apply-button, animated-button"/>
                        </HBox>
                    </VBox>
                </VBox>
                
                <!-- Sort Controls -->
                <HBox spacing="15" styleClass="sort-controls">
                    <padding>
                        <Insets left="20" right="20"/>
                    </padding>
                    
                    <Label text="Sort by:" styleClass="sort-label"/>
                    <ComboBox fx:id="sortByCombo" promptText="Relevance" styleClass="sort-combo"/>
                    
                    <Label text="Order:" styleClass="sort-label"/>
                    <ComboBox fx:id="sortOrderCombo" promptText="Descending" styleClass="sort-combo"/>
                    
                    <Region HBox.hgrow="ALWAYS"/>
                    
                    <Label fx:id="resultCountLabel" text="Showing 0 books" styleClass="result-count"/>
                </HBox>
                
                <!-- Results Panel -->
                <VBox spacing="15" styleClass="results-panel">
                    <padding>
                        <Insets left="20" right="20"/>
                    </padding>
                    
                    <Label text="Browse Books" styleClass="section-title"/>
                    
                    <!-- Books Grid -->
                    <TilePane fx:id="booksGridPane" hgap="15" vgap="25" prefColumns="4" styleClass="books-grid"/>
                    
                    <!-- Pagination -->
                    <HBox alignment="CENTER" styleClass="pagination-container">
                        <Pagination fx:id="booksPagination" styleClass="books-pagination"/>
                    </HBox>
                    
                    <!-- No Results Message -->
                    <VBox fx:id="noResultsBox" visible="false" alignment="CENTER" spacing="10" styleClass="no-results">
                        <ImageView fitHeight="80" fitWidth="80">
                            <Image url="@images/icons/no-results.png"/>
                        </ImageView>
                        <Label text="No books found" styleClass="no-results-title"/>
                        <Label text="Try adjusting your search or filters to find what you're looking for." styleClass="no-results-text"/>
                        <Button text="Clear All Filters" onAction="#clearFilters" styleClass="clear-button, animated-button"/>
                    </VBox>
                </VBox>

                <!-- Footer moved inside main content VBox -->
                <VBox styleClass="footer" VBox.vgrow="NEVER">
                    <HBox alignment="CENTER" spacing="50">
                        <padding>
                            <Insets top="30" right="5" bottom="5" left="5"/>
                        </padding>
                        
                        <VBox alignment="CENTER" spacing="10" styleClass="footer-section">
                            <Label text="About GyanTori" styleClass="footer-header"/>
                            <Label text="Your Gateway to Knowledge" styleClass="footer-text"/>
                            <Label text="Â© 2023 GyanTori" styleClass="footer-copyright"/>
                        </VBox>
                        
                        <VBox alignment="CENTER" spacing="10" styleClass="footer-section">
                            <Label text="Contact" styleClass="footer-header"/>
                            <Label text="support@gyantori.com" styleClass="footer-text"/>
                            <Label text="+1 (555) 123-4567" styleClass="footer-text"/>
                        </VBox>
                        
                        <VBox alignment="CENTER" spacing="10" styleClass="footer-section">
                            <Label text="Follow Us" styleClass="footer-header"/>
                            <HBox spacing="15" alignment="CENTER" styleClass="social-buttons">
                                <Button styleClass="social-button, animated-button">
                                    <graphic>
                                        <ImageView fitHeight="20" fitWidth="20" styleClass="icon">
                                            <Image url="@images/icons/facebook.png"/>
                                        </ImageView>
                                    </graphic>
                                </Button>
                                <Button styleClass="social-button, animated-button">
                                    <graphic>
                                        <ImageView fitHeight="20" fitWidth="20" styleClass="icon">
                                            <Image url="@images/icons/x.png"/>
                                        </ImageView>
                                    </graphic>
                                </Button>
                                <Button styleClass="social-button, animated-button">
                                    <graphic>
                                        <ImageView fitHeight="20" fitWidth="20" styleClass="icon">
                                            <Image url="@images/icons/LinkedIn.png"/>
                                        </ImageView>
                                    </graphic>
                                </Button>
                            </HBox>
                        </VBox>
                    </HBox>
                    
                    <!-- Footer Bottom Bar -->
                    <HBox styleClass="footer-bottom" alignment="CENTER">
                        <padding>
                            <Insets top="5" right="5" bottom="5" left="5"/>
                        </padding>
                        <Label text="Terms of Service | Privacy Policy | Cookie Policy" styleClass="footer-links"/>
                    </HBox>
                </VBox>
            </VBox>
        </ScrollPane>
    </HBox>
</VBox>