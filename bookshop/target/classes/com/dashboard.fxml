<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.DashboardController">
    
    <!-- Top Bar -->
    <top>
        <HBox spacing="10" alignment="CENTER_RIGHT" style="-fx-background-color: #333; -fx-padding: 10px;">
            <Label text="Dashboard" style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;" />
            <Region HBox.hgrow="ALWAYS"/>
            <Label fx:id="userNameLabel" text="User" style="-fx-text-fill: white; -fx-font-size: 16px;" />
            <Button text="Profile" onAction="#openProfile" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-padding: 8px 16px; -fx-border-radius: 5px;"/>
        </HBox>
    </top>

    <!-- Sidebar -->
    <left>
        <VBox spacing="10" style="-fx-background-color: #222; -fx-padding: 15px; -fx-pref-width: 200px;">
            <Label text="Welcome," style="-fx-text-fill: white; -fx-font-size: 14px;"/>
            <Label fx:id="userEmailLabel" text="user@example.com" style="-fx-text-fill: white; -fx-font-size: 14px;"/>
            <Separator />

            <Button fx:id="homeButton" text="Home" onAction="#goToHome" styleClass="sidebar-button"/>
            <Button fx:id="settingsButton" text="Settings" onAction="#goToSettings" styleClass="sidebar-button"/>
            <Button fx:id="logoutButton" text="Logout" onAction="#logout" styleClass="sidebar-button"/>
        </VBox>
    </left>

    <!-- Main Content Area -->
    <center>
        <StackPane fx:id="mainContent" style="-fx-background-color: #f4f4f4; -fx-padding: 20px;">
            <Label text="Welcome to your Dashboard" style="-fx-font-size: 20px; -fx-font-weight: bold;" />
        </StackPane>
    </center>

</BorderPane>
