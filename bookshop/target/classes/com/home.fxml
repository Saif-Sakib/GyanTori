    </left>

    <!-- Main Content Area with Smooth Scrolling -->
    <center>
        <ScrollPane fitToWidth="true" styleClass="main-content-scroll">
            <VBox spacing="30" styleClass="main-content">
                <padding>
                    <Insets top="20" right="20" bottom="20" left="20"/>
                </padding>

                <!-- Enhanced Welcome Section -->
                <StackPane styleClass="welcome-section">
                    <VBox alignment="CENTER_LEFT" spacing="10">
                        <Label fx:id="pageTitle" styleClass="welcome-title"/>
                        <Text styleClass="welcome-text" 
                              text="Discover millions of eBooks, audiobooks, magazines &amp; more"/>
                        <HBox spacing="15" styleClass="welcome-buttons">
                            <Button text="Explore Now" styleClass="primary-button, animated-button"/>
                            <Button text="Learn More" styleClass="secondary-button, animated-button"/>
                        </HBox>
                    </VBox>
                </StackPane>

                <!-- Featured Books Section with Horizontal Scroll -->
                <VBox spacing="15">
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <Label text="Featured Books" styleClass="section-title"/>
                        <Region HBox.hgrow="ALWAYS"/>
                        <Button text="View All" styleClass="view-all-button, animated-button"/>
                    </HBox>
                    <ScrollPane styleClass="books-scroll-pane" hbarPolicy="NEVER">
                        <HBox fx:id="featuredBooks" spacing="20" styleClass="books-container"/>
                    </ScrollPane>
                </VBox>

                <!-- Recommended Books Section -->
                <VBox spacing="15">
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <Label text="Recommended For You" styleClass="section-title"/>
                        <Region HBox.hgrow="ALWAYS"/>
                        <Button text="View All" styleClass="view-all-button, animated-button"/>
                    </HBox>
                    <ScrollPane styleClass="books-scroll-pane" hbarPolicy="NEVER">
                        <HBox fx:id="recommendedBooks" spacing="20" styleClass="books-container"/>
                    </ScrollPane>
                </VBox>
            </VBox>
        </ScrollPane>
    </center>

